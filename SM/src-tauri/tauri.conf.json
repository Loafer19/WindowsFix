{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Services Manager",
  "version": "0.4.0",
  "identifier": "com.servicesmanager",
  "build": {
    "beforeDevCommand": "bun run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "bun run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Windows Services Manager",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "copyright": "Popelyshyn",
    "shortDescription": "Services Manager",
    "longDescription": "A desktop application for managing Windows services",
    "icon": [
      "icons/icon.ico"
    ],
    "resources": [
      "services.json"
    ]
  }
}
